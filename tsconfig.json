{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@finance/ui": ["packages/shared/ui/src"],
      "@finance/db": ["packages/shared/db/src"],
      "@finance/api": ["packages/shared/api/src"],
      "@finance/ai": ["packages/shared/ai/src"],
      "@finance/auth": ["packages/features/auth/src"],
      "@finance/transactions": ["packages/features/transactions/src"],
      "@finance/analytics": ["packages/features/analytics/src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
